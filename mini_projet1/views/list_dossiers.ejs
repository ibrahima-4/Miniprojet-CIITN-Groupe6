<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Liste des Dossiers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container mt-5">
    <h1>Liste des Dossiers</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Date de création</th>
          <th>Nom du Patient</th>
          <th>Prénom du Patient</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% dossiers.forEach(dossier => { %>
          <tr>
            <td><%= dossier.idDossier %></td>
            <td><%= dossier.Datecreation %></td>
            <td><%= dossier.nom %></td>
            <td><%= dossier.prenom %></td>
            <td>
              <a href="/patient/dossier/view/<%= dossier.idDossier %>" class="btn btn-primary btn-sm">Voir</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
