<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ajouter Dossier</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="container mt-5">
    <h1>Ajouter un Dossier</h1>
    <form action="/patient/dossier/add" method="POST">
      <div class="mb-3">
        <label for="Datecreation" class="form-label">Date de cr√©ation</label>
        <input type="date" class="form-control" id="Datecreation" name="Datecreation" required>
      </div>
      <div class="mb-3">
        <label for="idPatient" class="form-label">Patient</label>
        <select class="form-select" id="idPatient" name="idPatient" required>
          <% patients.forEach(patient => { %>
            <option value="<%= patient.idPatient %>">
              <%= patient.nom %> <%= patient.prenom %>
            </option>
          <% }); %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Ajouter</button>
    </form>
  </div>
</body>
</html>
